<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef Name="Mining_Base">
        <defName>MiningBase</defName>
        <label>MiningBase</label>
        <workSpeedStat>MiningSpeed</workSpeedStat>
        <effectWorking>CutStone</effectWorking>
        <soundWorking>Recipe_Smith</soundWorking>
        <requiredGiverWorkType>Mining</requiredGiverWorkType>
        <workSkill>Mining</workSkill>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>SteelPickAxe</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    </RecipeDef>

    <!-- === Steel === -->
    <RecipeDef ParentName="Mining_Base">
        <defName>Mine_Steel</defName>
        <label>Mine for steel</label>
        <description>Send your pawns to the mineshaft to mine for steel, the most common resource. Uses steel pickaxes in the process made on the Mining tool maker's table.</description>
        <jobString>Mining for steel.</jobString>
        <workAmount>12500</workAmount>
        <products>
            <Steel>60</Steel>
        </products>
        <recipeUsers>
            <li>Mineshaft</li>
        </recipeUsers>
        <displayPriority>100</displayPriority>
        <unfinishedThingDef>UnfinishedMining</unfinishedThingDef>
    </RecipeDef>

    <!-- === Plasteel === -->
